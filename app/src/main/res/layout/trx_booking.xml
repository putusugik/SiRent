<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tx_sewa"
            android:hint="Tanggal Sewa"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:ems="10"
            style="@android:style/Widget.Material.EditText"
            android:inputType="date" />
        </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tx_kembali"
            android:hint="Tanggal Kembali"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="date"
            android:ems="10"
            style="@android:style/Widget.Material.EditText"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tx_lokasi"
            android:hint="Lokasi Pengiriman"
            android:inputType="textPostalAddress"
            android:ems="10"
            style="@android:style/Widget.Material.EditText"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tx_nohp"
            android:hint="Nomor Telepon"
            android:inputType="phone"
            android:ems="10"
            style="@android:style/Widget.Material.EditText"
            />
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Rp. "
            android:textSize="20sp"
            android:textColor="@color/dark_dark"
            android:gravity="center"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/tx_harga"
                style="@android:style/Widget.Material.EditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:textColor="@color/dark_dark"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="Total Harga"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <ScrollView
        android:id="@+id/scAksesoris"
        android:layout_width="match_parent"
        android:visibility="visible"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="true">

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llsurf"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="0.9"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/idsurf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>

                <CheckBox
                    android:id="@+id/cksurf"
                    android:enabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"/>

                <TextView
                    android:id="@+id/t_surf"
                    android:textSize="18sp"
                    android:layout_gravity="left|center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="Aksesoris"/>
                <EditText
                    android:id="@+id/et_surf"
                    android:enabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:inputType="number"
                    android:hint="Harga"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llhfull"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="0.9"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/idhfull"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>

                <CheckBox
                    android:id="@+id/ckhfull"
                    android:enabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"/>

                <TextView
                    android:id="@+id/t_hfull"
                    android:textSize="18sp"
                    android:layout_gravity="left|center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="Aksesoris"/>
                <EditText
                    android:id="@+id/et_hfull"
                    android:enabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:inputType="number"
                    android:hint="Harga"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llhstandar"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="0.9"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/idhstandar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>

                <CheckBox
                    android:id="@+id/ckhstandar"
                    android:enabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"/>

                <TextView
                    android:id="@+id/t_hstandar"
                    android:textSize="18sp"
                    android:layout_gravity="left|center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="Aksesoris"/>
                <EditText
                    android:id="@+id/et_hstandar"
                    android:enabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:inputType="number"
                    android:hint="Harga"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llhanak"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="0.9"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/idhanak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>

                <CheckBox
                    android:id="@+id/ckhanak"
                    android:enabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"/>

                <TextView
                    android:id="@+id/t_hanak"
                    android:textSize="18sp"
                    android:layout_gravity="left|center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="Aksesoris"/>
                <EditText
                    android:id="@+id/et_hanak"
                    android:enabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:inputType="number"
                    android:hint="Harga"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lljegois"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="0.9"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/idjegois"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>

                <CheckBox
                    android:id="@+id/ckjegois"
                    android:enabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"/>

                <TextView
                    android:id="@+id/t_jegois"
                    android:textSize="18sp"
                    android:layout_gravity="left|center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="Aksesoris"/>
                <EditText
                    android:id="@+id/et_jegois"
                    android:enabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:inputType="number"
                    android:hint="Harga"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lljstandar"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="0.9"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/idjstandar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>

                <CheckBox
                    android:id="@+id/ckjstandar"
                    android:enabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"/>

                <TextView
                    android:id="@+id/t_jstandar"
                    android:textSize="18sp"
                    android:layout_gravity="left|center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="Aksesoris"/>
                <EditText
                    android:id="@+id/et_jstandar"
                    android:enabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:inputType="number"
                    android:hint="Harga"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llbhelm"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="0.9"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/idbhelm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>

                <CheckBox
                    android:id="@+id/ckbhelm"
                    android:enabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"/>

                <TextView
                    android:id="@+id/t_bhelm"
                    android:textSize="18sp"
                    android:layout_gravity="left|center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="Aksesoris"/>
                <EditText
                    android:id="@+id/et_bhelm"
                    android:enabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:inputType="number"
                    android:hint="Harga"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llgps"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="0.9"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/idgps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>

                <CheckBox
                    android:id="@+id/ckgps"
                    android:enabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"/>

                <TextView
                    android:id="@+id/t_gps"
                    android:textSize="18sp"
                    android:layout_gravity="left|center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="Aksesoris"/>
                <EditText
                    android:id="@+id/et_gps"
                    android:enabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:inputType="number"
                    android:hint="Harga"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llpholder"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="0.9"
                android:orientation="horizontal"
                android:layout_marginBottom="15dp">

                <TextView
                    android:id="@+id/idpholder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>

                <CheckBox
                    android:id="@+id/ckpholder"
                    android:enabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"/>

                <TextView
                    android:id="@+id/t_pholder"
                    android:textSize="18sp"
                    android:layout_gravity="left|center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="Aksesoris"/>
                <EditText
                    android:id="@+id/et_pholder"
                    android:enabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:inputType="number"
                    android:hint="Harga"
                    />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Booking"
        android:id="@+id/but_book"
        android:background="@color/colorPrimary1"/>

</LinearLayout>
</android.support.v4.widget.NestedScrollView>