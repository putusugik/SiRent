<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="1.0">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.45"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/tv_idrent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="id"
            android:visibility="gone" />
        <TextView
            android:id="@+id/tv_stsrating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal"
            android:text="Detail Booking"
            android:textColor="@color/dark_primary"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1.0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/im_kend"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_menu_gallery" />

                <TextView
                    android:id="@+id/tv_tnamakend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="2dp"
                    android:textSize="20sp"
                    tools:text="Kendaraan" />

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/tv_total"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@color/dark_dark"
                        android:text="Total Harga"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:fontFamily="sans-serif-light"
                    android:text="Tanggal Sewa"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_tSewa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:fontFamily="sans-serif-light"
                    android:textSize="20sp"
                    android:layout_marginBottom="20dp"
                    tools:text="Tanggal Sewa" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="sans-serif-light"
                    android:text="Tanggal Kembali"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_tKembali"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:fontFamily="sans-serif-light"
                    android:textSize="20sp"
                    tools:text="Tanggal Kembali" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.55"
        android:background="#455A64"
        android:orientation="vertical"
        android:paddingStart="32dp"
        android:weightSum="0.8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:orientation="horizontal"
            android:weightSum="1.0">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5"
                android:text="Penyewa"
                android:textColor="#90A4AE"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_tnamasewa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_weight="0.5"
                android:textColor="#fff"
                android:textSize="20sp"
                tools:text="Nama Penyewa" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:orientation="horizontal"
            android:weightSum="1.0">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5"
                android:text="Alamat Pengriman"
                android:textColor="#90A4AE"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_talamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_weight="0.5"
                android:textColor="#fff"
                android:textSize="20sp"
                tools:text="Jalan Tunjung Sari Hotel Griya Sugik" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:orientation="horizontal"
            android:weightSum="1.0">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5"
                android:text="Status Booking"
                android:textColor="#90A4AE"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_tbooking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_weight="0.5"
                android:textColor="#fff"
                android:textSize="20sp"
                tools:text="Booking" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:orientation="horizontal"
            android:weightSum="0.9">

            <Button
                android:id="@+id/b_vsim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SIM"
                android:layout_weight="0.3"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:background="#455A64"
                android:textColor="#FFF"/>

            <Button
                android:id="@+id/b_aks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aksesoris"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_weight="0.3"
                android:background="#455A64"
                android:textColor="#FFF"/>

            <Button
                android:id="@+id/b_conf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Konfirmasi"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_weight="0.3"
                android:background="#455A64"
                android:textColor="#FFF"/>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>